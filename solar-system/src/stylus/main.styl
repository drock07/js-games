*
    margin 0
    padding 0
    box-sizing border-box

html, body
    width 100%
    height 100%

.game-area
    width 100%
    height 100%
    position relative

    .canvas-outer-wrapper
        width 100%
        height 100%
        padding-bottom 80px

        .canvas-inner-wrapper
            width 100%
            height 100%

            canvas
                margin auto

    .game-toolbar
        height 80px

        position absolute
        bottom 0
        left 0
        right 0

        background-color yellow
